//The models have to be create here

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())                      //Identification key, has to be unique
  createdAt DateTime @default(now())
  updatedAt  DateTime @updatedAt
  email String @unique                                      //Email     - Required and unique
  hash String                                               //Password  - Required
  firsName String?                                          //FirsName  - Optional
  lastName String?                                          //LastName  - Optional
  bookmarks Bookmark[]                                      //relation column OneToMany with Bookmark
}

model Bookmark{
  id Int @id @default(autoincrement())                      //Identification key, has to be unique
  createdAt DateTime @default(now())
  updatedAt  DateTime @updatedAt
  title String                                              //Required
  description String?                                       //Optinal
  link String                                               //Required
  userId Int                                                //Relation column ManyToOne with User
  user User @relation(fields: [userId], references: [id])   //We use the logic only in ManyToOne, "id" is referenced to User.id
}